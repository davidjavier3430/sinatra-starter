

<div class="big-container-2">  <!--- Start big-container --->

  <div class="row card my-card">

    <div class="row">
      <div class="col s12 m12">
        <% if @ride.errors.size > 0 %>
          <div class='alert'>
            <h6>Please check your data</h6>
        </div>
        <% end %>
    </div>
  </div>

    <form method='POST' class="col s12 m12" novalidate>

      <div class="row">

        <div class="col s12 m12 header-2">
          <h5 class="ubuntu-500 header-2">Step 1: Basic Info</h5>
        </div>

        <div class="input-field col s12 m4">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" name="ride[nickname]" type="text" class="<%= @ride.errors["nickname"].size != 0 ? "invalid" : "" %>" value="<%= @ride.nickname %>">
          <label for="icon_prefix">Nickname</label>
        </div>

        <div class="input-field col s12 m4">
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" name="ride[telephone]" type="tel" class="<%= @ride.errors["telephone"].size != 0 ? "invalid" : "" %>" value="<%= @ride.telephone %>">
          <label for="icon_telephone">Telephone</label>
        </div>

        <div class="input-field col s12 m4">
          <i class="material-icons prefix">email</i>
          <input id="email" name="ride[email]" type="email" class="<%= @ride.errors["email"].size != 0 ? "invalid" : "" %>" value="<%= @ride.email %>">
          <label for="email">Email</label>
        </div>

        <div class="input-field col s12 m4">
          <i class="material-icons prefix">today</i>
          <input type="date" name="ride[date]" class='datepicker <%= @ride.errors["date"].size != 0 ? "invalid" : "" %>" value="<%= @ride.date %>' value="">
          <label for="date">Date</label>
        </div>

        <div class="input-field col s12 m4">
            <i class="material-icons prefix">schedule</i>
          <input id="schedule" type="time" name="ride[time]" class='timepicker <%= @ride.errors["time"].size != 0 ? "invalid" : "" %>" value="<%= @ride.time %>' value="">
          <label for="time">Time</label>
        </div>

        <div class="input-field col s12 m4 type-road">
          <ul>
            <li><input name="ride[ride_type]" type="radio" id="test1" class=" <%= @ride.errors["ride_type"].size != 0 ? "invalid" : "" %>" value="0" /><label for="test1">Road</label></li>
            <li><input name="ride[ride_type]" type="radio" id="test2" class=" <%= @ride.errors["ride_type"].size != 0 ? "invalid" : "" %>" value="1" /><label for="test2">Mountain</label></li>
          </ul>

        </div>

      </div>

      <div class="row">

        <div class="col s12 m12 header-2">
          <h5 class="ubuntu-500 ">Step 2: Select Route</h5>
        </div>

        <div class=" col s12 m12" style='width:100%;' data-ride data-ride-editable="1">
            <input data-ride-search type='text' class='ride-editor-location' />
            <div   data-ride-map    style='width:100%; height:400px;'></div>
            <input data-ride-data   type='hidden' name='ride[route]' value='' />
        </div>

      </div>

      <div class="row row-sub">

        <div class="col s12 m12">
          <button class="btn waves-effect grey ubuntu-700 btn-sub" type="submit" name="action">Create
            <i class="material-icons right ">done</i>
          </button>
        </div>

      </div>

    </form>

  </div>

</div> <!--- End big-container --->
