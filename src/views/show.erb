
<div class="big-container-2"> <!--- start big-container --->

  <div class="row">
    <div class="col s12 m12">
    <h5 class="ubuntu-700"><%= @ride.nickname %></h6>
  </div>

  <div class="col s12 m6">
    <h6 class="ubuntu-700"><%= @ride.telephone %></h6>
  </div>

  <div class="col s12 m6">
    <h6><%= @ride.email %></h6>
  </div>

  <div class="col s12 m4">
    <h4 class="ubuntu-700"><%= @ride.date.in_time_zone("America/La_Paz").strftime("%a %b %e, %Y") %></h4>
  </div>

  <div class="col s12 m2">
    <h4 class="ubuntu-700"><%= @ride.time.in_time_zone("America/La_Paz").strftime("%I:%M %P") %></h4>
  </div>

  <div class="col s12 m2">
      <% if @ride.ride_type == 0 %>
            <h4 class="ubuntu-700">Road</h4>
      <% else %>
            <h4 class="ubuntu-700">Mountain</h4>
        <% end %>
  </div>

  <div class="col s12 m4">
    <h4 class="ubuntu-700"><%= @miles %> miles</h4>
    <h4 class="ubuntu-700" >Members Joined: <%= @members_count %></h4>
  </div>

  <div class="col s12 m12">   <!--- start google map --->
    <div style='width:100%;' data-ride>
      <div   data-ride-map    style='width:100%;height:400px;'></div>
      <input data-ride-data   type='hidden' name='ride' value='<%= h @ride.route.to_json %>' />
    </div>
  </div> <!--- End google map --->

</div>

<form method='POST' action="/rides/<%= @ride.id %>/members">

  <div class="input-field col s12 m4">
    <input id="" name="ride[members]" type="text" class="">
    <label for="icon_prefix">enter Email</label>
  </div>

  <div class="col s12 m12">
    <button class="btn waves-effect grey ubuntu-700 btn-sub" type="submit" name="action">submit
    </button>
  </div>

</form>

</div> <!--- End big-container --->
